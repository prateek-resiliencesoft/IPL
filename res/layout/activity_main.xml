<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#0ADBF7"   
     tools:context="com.example.ipl.MainActivity"
    tools:ignore="TextFields" >
      
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize" >
    
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:gravity="top"
                android:orientation="vertical"
                tools:ignore="UselessLeaf" >

                <TextView
                    android:id="@+id/txtmatch"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#F70A0A"
                    android:gravity="center"
                    android:text="Match"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="UselessLeaf" >

         </LinearLayout>

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="30dp"
          android:gravity="center_vertical"
          android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtteam1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_weight="0.67"
                    android:background="#F70A0A"
                    android:gravity="center"
                    android:text="Chennai"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.20" />

                 <TextView
                     android:id="@+id/txtteam2"
                     android:layout_width="wrap_content"
                     android:layout_height="25dp"
                     android:layout_weight="0.67"
                     android:background="#F70A0A"
                      android:gravity="center"
                     android:text="Kolkata"
                     tools:ignore="HardcodedText" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                
                
            </LinearLayout>

      
            
       <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

             <EditText
                 android:id="@+id/edmatch1"
                 android:layout_width="135dp"
                 android:layout_height="wrap_content"
                 android:background="@drawable/blankbox"
                 android:ems="10"
                 android:gravity=""
                 android:hint="Enter Point"
                 tools:ignore="HardcodedText" >

             <requestFocus />
         </EditText>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

                 <EditText
                     android:id="@+id/edmatch2"
                     android:layout_width="141dp"
                     android:layout_height="wrap_content"
                     android:background="@drawable/blankbox"
                     android:ems="10"
                     android:hint="Enter Point"
                     tools:ignore="HardcodedText" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
            
       <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnbet"
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:layout_weight="0.48"
                    android:background="#F70A0A"
                    android:text="Bet"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="100dp"
           android:gravity="center_vertical"
           android:orientation="vertical"
           tools:ignore="UselessLeaf" >

         </LinearLayout>  
     </LinearLayout>
    </ScrollView>
</LinearLayout>
